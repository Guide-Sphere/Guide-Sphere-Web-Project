<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification</title>
    <style>
        .verification-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .verification-input {
            width: 40px; /* Adjust width as needed */
            height: 40px; /* Adjust height as needed */
            margin: 0 5px; /* Adjust spacing between input boxes as needed */
            text-align: center;
            font-size: 20px; /* Adjust font size as needed */
        }

        .submit-button {
            margin-top: 20px; /* Adjust margin as needed */
            padding: 10px 20px; /* Adjust padding as needed */
            font-size: 16px; /* Adjust font size as needed */
            cursor: pointer;
            background-color: #007bff; /* Adjust background color as needed */
            color: #fff; /* Adjust text color as needed */
            border: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="verification-container">
        <form id="verification-form" action="/email_verfied" method="POST">
            <h1>Enter the Verification Code</h1>
            <input class="verification-input" type="text" name="digit1" maxlength="1" required autofocus>
            <input class="verification-input" type="text" name="digit2" maxlength="1" required>
            <input class="verification-input" type="text" name="digit3" maxlength="1" required>
            <input class="verification-input" type="text" name="digit4" maxlength="1" required>
            <input class="verification-input" type="text" name="digit5" maxlength="1" required>
            <input class="verification-input" type="text" name="digit6" maxlength="1" required>
            <button type="submit" class="submit-button">Verify</button>
        </form>
    </div>

    <script>
        const inputs = document.querySelectorAll('.verification-input');
        inputs.forEach((input, index) => {
            input.addEventListener('input', (event) => {
                if (index < inputs.length - 1 && event.target.value.length === 1) {
                    inputs[index + 1].focus();
                }
            });
        });
    </script>
</body>
</html>
